// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  role      Role      @default(BUYER)
  products  Product[]
  cart      Cart?
  orders    Order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String     @id @default(cuid())
  title       String
  description String
  price       Float
  images      String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  sellerId    String
  // When a User is deleted, all their Products will be deleted too.
  seller      User       @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  cartItems   CartItem[]
}

model Cart {
  id        String     @id @default(cuid())
  // When a User is deleted, their Cart will be deleted too.
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String     @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(cuid())
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade) // Also cascade deletes from Cart
  cartId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  createdAt DateTime @default(now())

  @@unique([cartId, productId])
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  COMPLETED
  CANCELLED
}

model Order {
  id        String      @id @default(cuid())
  // NOTE: We are NOT cascading deletes on Orders. It's good practice
  // to keep order history even if a user deletes their account.
  buyer     User        @relation(fields: [buyerId], references: [id])
  buyerId   String
  items     OrderItem[]
  total     Float
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  productId String
  title     String
  price     Float
  quantity  Int
  createdAt DateTime @default(now())
}
